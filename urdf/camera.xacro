<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">
<xacro:macro name="camera">

    <xacro:property name="camera_link" value="0.05" /> <!-- Size of square 'camera' box -->

    <!-- Camera -->
  <link name="camera_link">
    <collision>
            <origin rpy="0 0 0" xyz="0 0 -0.15"/>
      <geometry>
    <box size="${camera_link} ${camera_link} ${camera_link}"/>
      </geometry>
    </collision>

    <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.15"/>
      <geometry>
    <box size="${camera_link} ${camera_link} ${camera_link}"/>
      </geometry>
      <material name="black"/>
    </visual>

    <inertial>
      <mass value="1e-5" />
            <origin rpy="0 0 0" xyz="0 0 -0.15"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>


    <joint name="base_to_camera" type="continuous">
        <axis xyz="0 0 1"/>  <!-- changes axis of rotation -->
        <parent link="base_link"/>
        <child link="camera_link"/>
        <origin rpy="0 0 0" xyz="0 0 0.3"/> <!-- moves the child_frame with respect to parent_frame -->
        <limit effort="30" velocity="1.0"/>
    </joint>


    <transmission name="camera_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="$camera_motor">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
        <joint name="base_to_camera">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        </joint>
    </transmission>


</xacro:macro>
</robot>

